From caaf5da8b1bfecf9ff68f0cfb3559ca02c301b97 Mon Sep 17 00:00:00 2001
From: Jonathan Piat <piat.jonathan@gmail.com>
Date: Sun, 1 Mar 2015 23:13:40 +0100
Subject: [PATCH] Enabling boneblack support or logibone

---
 arch/arm/boot/dts/Makefile                         |    1 +
 arch/arm/boot/dts/am335x-boneblack-logibone-r1.dts |   47 ++++++++++++++++++++
 2 files changed, 48 insertions(+)
 create mode 100644 arch/arm/boot/dts/am335x-boneblack-logibone-r1.dts

diff --git a/arch/arm/boot/dts/Makefile b/arch/arm/boot/dts/Makefile
index c82824f..ae347d9 100644
--- a/arch/arm/boot/dts/Makefile
+++ b/arch/arm/boot/dts/Makefile
@@ -238,6 +238,7 @@ dtb-$(CONFIG_ARCH_OMAP2PLUS) += omap2420-h4.dtb \
 	am335x-boneblack-lcd7-01-00a2.dtb \
 	am335x-boneblack-lcd4-01-00a1.dtb \
 	am335x-boneblack-lcd3-01-00a2.dtb \
+	am335x-boneblack-logibone-r1.dtb \
 	am335x-boneblack-bbb-exp-c.dtb \
 	am335x-boneblack-4dcape-70t.dtb \
 	am335x-boneblack-4dcape-70.dtb \
diff --git a/arch/arm/boot/dts/am335x-boneblack-logibone-r1.dts b/arch/arm/boot/dts/am335x-boneblack-logibone-r1.dts
new file mode 100644
index 0000000..278d032
--- /dev/null
+++ b/arch/arm/boot/dts/am335x-boneblack-logibone-r1.dts
@@ -0,0 +1,47 @@
+/dts-v1/;
+
+#include "am33xx.dtsi"
+#include "am335x-bone-common.dtsi"
+#include "am335x-bone-common-pinmux.dtsi"
+
+/ {
+	model = "TI AM335x BeagleBone Black";
+	compatible = "ti,am335x-bone-black", "ti,am335x-bone", "ti,am33xx";
+};
+
+&ldo3_reg {
+	regulator-min-microvolt = <1800000>;
+	regulator-max-microvolt = <3300000>;
+	regulator-always-on;
+};
+
+&ocp {
+	/* clkout2 */
+	P9_41_pinmux {
+		status = "disabled";
+	};
+	/* mmc1 */
+	P9_92_pinmux {
+		status = "disabled";
+	};
+};
+
+&mmc1 {
+	vmmc-supply = <&ldo3_reg>;
+};
+
+&am33xx_pinmux {
+	pinctrl-names = "default";
+	pinctrl-0 = <&clkout2_pin>;
+};
+
+&sham {
+	status = "okay";
+};
+
+&aes {
+	status = "okay";
+};
+
+#include "am335x-bone-i2c2-cape-eeprom.dtsi"
+#include "am335x-bone-logibone-r1.dtsi"
-- 
