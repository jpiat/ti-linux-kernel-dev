+
+&ocp {
+	P8_25_pinmux {
+		status = "disabled";
+	};
+	P8_24_pinmux {
+		status = "disabled";
+	};
+	P8_05_pinmux {
+		status = "disabled";
+	};
+	P8_05_pinmux {
+		status = "disabled";
+	};
+	P8_06_pinmux {
+		status = "disabled";
+	};
+	P8_23_pinmux {
+		status = "disabled";
+	};
+	P8_22_pinmux {
+		status = "disabled";
+	};
+	P8_03_pinmux {
+		status = "disabled";
+	};
+	P8_04_pinmux {
+		status = "disabled";
+	};
+	P8_19_pinmux {
+		status = "disabled";
+	};
+	P8_13_pinmux {
+		status = "disabled";
+	};
+	P8_14_pinmux {
+		status = "disabled";
+	};
+	P8_17_pinmux {
+		status = "disabled";
+	};
+	P8_12_pinmux {
+		status = "disabled";
+	};
+	P8_11_pinmux {
+		status = "disabled";
+	};
+	P8_16_pinmux {
+		status = "disabled";
+	};
+	P8_15_pinmux {
+		status = "disabled";
+	};
+	P8_21_pinmux {
+		status = "disabled";
+	};
+	P8_18_pinmux {
+		status = "disabled";
